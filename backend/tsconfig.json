{
  "compilerOptions": {
    /* === File structure === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === JavaScript version & module system === */
    "target": "ES6",
    "module": "commonjs",

    /* === Module resolution & compatibility === */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* === TypeScript behavior === */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* === Helpful debugging === */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
